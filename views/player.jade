extends layout

block content
  .wrapper
    .pagewidth
      h1 Listen
      form.what-do-you-want
        h3 I want sounds within a&nbsp;
          select(name='radius')
            option(value='1') 1
            option(value='10') 10
            option(value='100') 100
            option(value='1000') 1000
          |&nbsp;km radius with these tags &#8212;
        input.tags(type='text', name='tags')
      input.ladda-button.red.full#filter-me(type='submit', value='Find')
      
      ul#point-listing

block extrascripts
  script(src='/bootstrap/js/bootstrap-select.js')
  script(src='/js/vendor/soundmanager2.js')
  script(src='/js/classes/InlinePlayer.js')
  script(type='text/javascript').
    soundManager.setup({
      url: '/js/vendor/sm2-lib',
      flashVersion: 9,
      onready: function(){
        $(document).trigger('sm2-ready');
      }
    })
  script(src='/js/vendor/ICanHaz.min.js')
  script(src='/js/player.js')
