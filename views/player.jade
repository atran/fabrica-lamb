extends layout

block content
  .wrapper
    .pagewidth
      #map 
      form.what-do-you-want
        a#play-all.hidden(href="#") PLAY ALL
        h1 Listen
        h3 I want sounds within a&nbsp;
          select(name='radius')
            option(value='.01') 10 m
            option(value='.1') 100 m
            option(value='.5') 500 m
            option(value='1') 1 km
            option(value='10') 10 km
            option(value='100') 100 km
          |&nbsp; radius with these tags &#8212;
        input.tags(type='text', name='tags')
        button.ladda-button.red.full.zoom-out#filter-me
          span Find

      ul#point-listing

block extrascripts
  script(type='text/javascript').
    context = false;
    $(function(){
      try {
        window.AudioContext = window.AudioContext||window.webkitAudioContext
        context = new AudioContext();
      }
      catch (e) {}
    });
  script(src='/js/classes/AudioPoint.js')
  script(type='text/javascript').
    soundManager.setup({
      url: '/js/sm2-lib',
      flashVersion: 9
    })
  script(src='/js/player.js')
