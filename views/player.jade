extends layout

block content
  .wrapper
    .pagewidth
      #map 
      form.what-do-you-want
        a#play-all(href="#") PLAY ALL
        input(type='button', onclick='playDummy()', value='init')
        h1 Listen
        h3 I want sounds within a&nbsp;
          select(name='radius')
            option(value='1') 1
            option(value='10') 10
            option(value='100') 100
            option(value='1000') 1000
            option(value='10000') 10000
          |&nbsp;km radius with these tags &#8212;
        input.tags(type='text', name='tags')
        input.ladda-button.red.full#filter-me(type='submit', value='Find')
      
      ul#point-listing

